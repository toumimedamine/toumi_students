<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/classroom.css') }}">

</head>
<body>

<div class="container" style="margin-top: 2%;">
   {% for classroom in response%}
    <div class="item">
        <img class="item-img" src="{{ asset('img/classroom.png') }}" style="border-radius: 8px">
    <div style="min-width: 51.5rem">
        <h4>{{ classroom.name }}</h4>
        <small>Created at : {{ classroom.createdAt | date}}</small>
        <p>{{ classroom.prof}}</p>
    </div>
        <div style="display: grid;gap: 5px;">
            <a class="btn btn-primary" href="{{ path('app_classroom_show', {'idClassroom': classroom.id}) }}">Show</a>
            <a class="btn btn-primary" href="{{ path('app_classroom_add',{'id':classroom.id}) }}">Add member</a>
            <a class="btn btn-danger" href="{{ path('app_classroom_delete', {'id': classroom.id}) }}">Delete</a>
        </div>
    </div>

       <br>

   {% endfor %}
    <a type="button" class="btn btn-primary" href="{{ path('app_classroom_addClassroom') }}">Add New Classroom</a>

</div>

</body>
</html>